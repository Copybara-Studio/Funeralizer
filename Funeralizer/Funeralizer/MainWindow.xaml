<Window x:Class="Funeralizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Funeralizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Image x:Name="imgPhoto" Stretch="Uniform" Width="300" Height="300" Margin="150, 100, 550, 200"/>
        <Image x:Name="imgPhotoGreyscale" Stretch="Uniform" Width="300" Height="300" Margin="550, 100, 150, 200"/>
        <Button Name="btnOpen" Click="btnOpen_Click" Width="100" Height="40" Margin="340,405,500,99">Open</Button>
        <Button Name="btnGenerate" Click="btnGenerate_Click" Width="100" Height="40" Margin="500,405,340,99">Generate</Button>
    </Grid>
</Window>
